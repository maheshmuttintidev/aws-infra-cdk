  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "lib",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true
